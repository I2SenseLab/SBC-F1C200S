/dts-v1/;
#include "f1c200s_simple_sbc.dtsi"
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "I2Sense Simple SBC";
	compatible = "allwinner,suniv-f1c100s";

	aliases {
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	reg_vcc3v3: vcc3v3 {
		compatible = "regulator-fixed";
		regulator-name = "vcc3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-always-on;
	};

	reg_vcc5v: vcc5v {
		compatible = "regulator-fixed";
		regulator-name = "usb_vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		enable-active-high;
	};

	leds {
		compatible = "gpio-leds";

		heartbeat_led: led-0 {
			label = "heartbeat";
			gpios = <&pio 3 1 GPIO_ACTIVE_HIGH>; // PD1
			linux,default-trigger = "heartbeat";
			default-state = "off";
		};

		cpu_led: led-1 {
			label = "cpu";
			gpios = <&pio 3 2 GPIO_ACTIVE_HIGH>; // PD2
			linux,default-trigger = "cpu";
			default-state = "off";
		};

		activity_led: led-2 {
			label = "activity";
			gpios = <&pio 3 3 GPIO_ACTIVE_HIGH>; // PD3
			linux,default-trigger = "activity";
			default-state = "off";
		};

		custom_led: led-3 {
			label = "custom";
			gpios = <&pio 3 4 GPIO_ACTIVE_HIGH>; // PD4
			linux,default-trigger = "none";
			default-state = "off";
		};
	};
};

&spi0 {
	pinctrl-names = "default";
    pinctrl-0 = <&spi0_pc_pins>;
    status = "okay";

	flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "xtx,xt25f256", "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <40000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "storage";
				reg = <0x000000 0x1000000>; // 16MB
			};
		};
	};
};

&spi1 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&spi1_pc_pins>;

	panel@0 {
		compatible = "sitronix,st7789v";
		reg = <0>;
		spi-max-frequency = <8000000>;
		reset-gpios = <&pio 3 6 GPIO_ACTIVE_LOW>; // PD6
		dc-gpios = <&pio 3 8 GPIO_ACTIVE_LOW>;  // PD8
		rotation = <180>;
		power-supply = <&reg_vcc3v3>;
		buswidth = <9>;

		port {
			panel_input: endpoint {
				remote-endpoint = <&tcon0_out_panel>;
			};
		};
    };
};

&pwm {
	status = "okay";
};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pe_pins>;
	status = "okay";
};

&otg_sram {
	status = "okay";
};

&usb_otg {
    dr_mode = "host";
    status = "okay";
};

&usbphy {
	status = "okay";
	usb0_vbus-supply = <&reg_vcc5v>;
};

&i2c0 {
	status = "okay";
    pinctrl-names = "default";
    pinctrl-0 = <&i2c0_pins>;
	

    max30102@57 {
        compatible = "maxim,max30102";
        reg = <0x57>;  // I2C address

		interrupt-parent = <&pio>;
        interrupts = <3 18>; // PD18

        maxim,red-led-current-microamp = <7000>;
        maxim,ir-led-current-microamp = <7000>;
    };   
};

&mmc0 {
	bus-width = <4>;
	disable-wp;
	broken-cd;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};

&codec {
	allwinner,audio-routing =
		"Headphone", "HP",
		"Headphone", "HPCOM";
	status = "okay";
};

&dma {
    status = "okay";
};


&tcon0 {
    status = "okay";
};
